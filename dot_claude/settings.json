{
  "env": {
    "ENABLE_TOOL_SEARCH": "true"
  },
  "permissions": {
    "allow": [
      "Bash(greppy:*)"
    ],
    "deny": [
      "Glob",
      "Grep",
      "Read",
      "Task(Explore)",
      "Bash(bw:*)",
      "Bash(*bitwarden*)",
      "Bash(rm -rf ~*)",
      "Bash(rm -rf /*)",
      "Bash(sudo rm:*)",
      "Bash(curl*|*bash:*)",
      "Bash(wget*|*sh:*)",
      "Bash(npm publish:*)",
      "Bash(terraform destroy:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude needs your input\" with title \"Claude Code\" sound name \"Glass\"'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "fitness-track -p"
          },
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude completed the task\" with title \"Claude Code\" sound name \"Glass\"'"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "pkill -f \"greppy watch\" 2>/dev/null || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/daniel/.local/bin/dcg"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "pgrep -f 'greppy watch' > /dev/null || nohup greppy watch --debounce 10 > /dev/null 2>&1 &"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "printf '%s | %s' \"$(~/.claude/ccline/ccline)\" \"$(fitness-track statusline)\" ",
    "padding": 0
  },
  "enabledPlugins": {
    "claude-mem@thedotmack": true,
    "security-guidance@claude-code-plugins": true,
    "playground@claude-plugins-official": true,
    "superpowers@claude-plugins-official": true
  },
  "effortLevel": "medium"
}